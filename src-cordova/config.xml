<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cuantoxpersona.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cu√°nto x Persona</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon density="ldpi" src="assets/icon/android/ic_launcher-ldpi.png" />
        <icon density="mdpi" src="assets/icon/android/ic_launcher-mdpi.png" />
        <icon density="hdpi" src="assets/icon/android/ic_launcher-hdpi.png" />
        <icon density="xhdpi" src="assets/icon/android/ic_launcher-xhdpi.png" />
        <icon density="xxhdpi" src="assets/icon/android/ic_launcher-xxhdpi.png" />
        <icon density="xxxhdpi" src="assets/icon/android/ic_launcher-xxxhdpi.png" />

        <preference name="StatusBarBackgroundColor" value="#9ea7aa" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
